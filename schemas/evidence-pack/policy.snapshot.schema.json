{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://proteus.example/schemas/evidence-pack/policy.snapshot.schema.json",
  "title": "Policy Snapshot",
  "type": "object",
  "required": [
    "snapshot_id",
    "tenant_id",
    "bundle_id",
    "bundle_version",
    "created_at",
    "hash",
    "contents"
  ],
  "properties": {
    "snapshot_id": {
      "type": "string"
    },
    "tenant_id": {
      "type": "string"
    },
    "bundle_id": {
      "type": "string"
    },
    "bundle_version": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "hash": {
      "type": "object",
      "required": [
        "alg",
        "value"
      ],
      "properties": {
        "alg": {
          "type": "string",
          "enum": [
            "sha256"
          ]
        },
        "value": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        }
      },
      "additionalProperties": false
    },
    "contents": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}