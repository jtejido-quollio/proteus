{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://proteus.example/schemas/evidence-pack/case.export.schema.json",
  "title": "Case Export",
  "type": "object",
  "required": [
    "case_id",
    "tenant_id",
    "status",
    "opened_at",
    "question",
    "scope",
    "outcomes"
  ],
  "properties": {
    "case_id": {
      "type": "string"
    },
    "tenant_id": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "OPEN",
        "IN_REVIEW",
        "RESOLVED",
        "CLOSED"
      ]
    },
    "opened_at": {
      "type": "string",
      "format": "date-time"
    },
    "closed_at": {
      "type": "string",
      "format": "date-time"
    },
    "question": {
      "type": "string"
    },
    "scope": {
      "type": "object",
      "required": [
        "artifacts"
      ],
      "properties": {
        "artifacts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "holds": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "hold_id",
          "type",
          "placed_at"
        ],
        "properties": {
          "hold_id": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": [
              "legal_hold",
              "export_hold",
              "content_hold"
            ]
          },
          "placed_at": {
            "type": "string",
            "format": "date-time"
          },
          "released_at": {
            "type": "string",
            "format": "date-time"
          },
          "rationale": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "outcomes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "outcome_id",
          "decided_at",
          "decision",
          "justification"
        ],
        "properties": {
          "outcome_id": {
            "type": "string"
          },
          "decided_at": {
            "type": "string",
            "format": "date-time"
          },
          "decision": {
            "type": "string"
          },
          "justification": {
            "type": "string"
          },
          "policy_snapshot_ref": {
            "type": "string"
          },
          "approvals": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "approver_hash",
                "approved_at",
                "role"
              ],
              "properties": {
                "approver_hash": {
                  "type": "string"
                },
                "approved_at": {
                  "type": "string",
                  "format": "date-time"
                },
                "role": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}