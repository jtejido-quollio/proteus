{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://proteus.example/schemas/evidence-pack/pack.manifest.schema.json",
  "title": "Evidence Pack Manifest",
  "type": "object",
  "required": [
    "pack_version",
    "pack_id",
    "generated_at",
    "tenant_id",
    "case_id",
    "files"
  ],
  "properties": {
    "pack_version": {
      "type": "string",
      "const": "v1"
    },
    "pack_id": {
      "type": "string"
    },
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },
    "generated_by": {
      "type": "object",
      "properties": {
        "principal_hash": {
          "type": "string"
        },
        "principal_type": {
          "type": "string",
          "enum": [
            "user",
            "service_account",
            "system"
          ]
        },
        "display": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "tenant_id": {
      "type": "string"
    },
    "case_id": {
      "type": "string"
    },
    "redaction_profile": {
      "type": "string"
    },
    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "path",
          "sha256",
          "bytes",
          "content_type"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-f0-9]{64}$"
          },
          "bytes": {
            "type": "integer",
            "minimum": 0
          },
          "content_type": {
            "type": "string"
          },
          "role": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}